{
  "name": "Foot picker",
  "description": "Help you check peoples allowances, and create group order quickly",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "host_permissions": [
    "<all_urls>",
    "http://localhost/*/",
    "https://www.foodpanda.sg/"
  ],
  "permissions": [
    "tabs",
    "storage",
    "cookies",
    "activeTab",
    "scripting",
    "unlimitedStorage"
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject-script.js"],
      "matches": ["https://www.foodpanda.sg/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://www.foodpanda.sg/*"],
      "js": ["content-script.js"]
    }
  ],
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  }
}
