{
  "name": "Food picker",
  "description": "Help you check peoples allowances, and create group order quickly. Powered by @yukun.yang@fe_p2p@fuantuan",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "toolbar.png",
      "24": "toolbar.png",
      "32": "toolbar.png"
    },
    "default_popup": "index.html",
    "default_title": "Food picker"
  },
  "host_permissions": [
    "http://localhost/*/",
    "https://www.foodpanda.sg/",
    "https://sg.fd-api.com/"
  ],
  "permissions": [
    "background",
    "notifications",
    "tabs",
    "storage",
    "cookies",
    "activeTab",
    "scripting",
    "unlimitedStorage",
    "alarms",
    "offscreen",
    "webRequest",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject-script.js"],
      "matches": ["https://www.foodpanda.sg/*", "https://sg.fd-api.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://www.foodpanda.sg/*", "https://sg.fd-api.com/*"],
      "js": ["content-script.js"]
    }
  ],
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  }
}
